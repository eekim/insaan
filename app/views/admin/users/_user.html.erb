<tr class="<%= cycle('rowA', 'rowB') -%>">
  <td><%= user.login -%></td>
  <td><%= user.email -%></td>
  <td><%= user.enabled ? 'yes' : 'no' -%>
  <% unless user == current_user -%>
    <% if user.enabled -%>
      [<%= link_to('disable', admin_user_url(user.id), :method => :delete) %>]
    <% else -%>
      [<%= link_to('enable', enable_admin_user_url(user.id), :method => :put) %>]
    <% end -%>
  <% end -%>
  </td>
  <td><% user.roles.each do |r| %>
      <%= r.name + " " %>
  <% end %></td>
  <td>[<%= link_to 'edit', edit_admin_user_url(user) %>]</td>
  <td>[<%= link_to 'edit permissions', admin_user_roles_url(user) %>]</td>
</tr>
