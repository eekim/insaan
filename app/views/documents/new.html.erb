<%= render :partial => 'layouts/person_top', :local => @person %>

<div id="gallery_container">
<div id="file_section">
<div class="module" style="width: 651px;">
<h3 class="title"><span class="static">Upload a new document</span></h3>
<div class="module_content" style="padding: 5px;">
<%= error_messages_for :document %>
<% form_for(:document, :url => person_documents_path(@person), :html => { :multipart => true }) do |f| %>
  <strong>Browse for a Document</strong> <small>(doc, txt, rtf, odt only; 10MB max)</small>:<br />
  <%= f.file_field 'uploaded_data' %> <br />
  <%= f.label :title, 'Document name' %><br />
  <%= f.text_field :title %> <br />
  <%= f.label :description %> <br />
  <%= f.text_area :description, {:style => "width: 300px; height: 150px;"} %>
  <p>
    <%= submit_tag 'Upload Document' %> or
    <%= link_to 'cancel', person_documents_path(@person), {:class => 'cancel'} %>
  </p>
<% end %>

</div>
</div>
</div>

