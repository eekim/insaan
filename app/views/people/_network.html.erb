<div class="module" style="width:651px;">
  <h3 class="title">Network</h3>
  <div id="view_stuff" style="padding: 0 5px;">
    <table width="100%" cellspacing="0" cellpadding="0">
      <tr>
	<% if @person.region != nil %>
          <td valign="top" style="width:20%; padding-right: 5px;">
	    Region: 
          </td>
          <td valign="top" style="width:80%; padding-right: 5px;">
	    <%= @person.region.country.name %> / <%= link_to(@person.region.name, region_path(@person.region)) %> (<%= pluralize @person.region.people.size, 'person' %>)
          </td>
	<% end %>
      </tr>
      <tr>
	<% if @person.competencies %>
          <td valign="top" style="width:20%; padding-right: 5px;">
	    Competencies: 
          </td>
	  <td>
	    <% @person.competencies.each do |c| %>
	      <%=h c.name %> (<%= pluralize c.people.size, 'person' %>) &nbsp;
	    <% end %>	    
	  </td>
	<% end %>
      </tr>
    </table>
    <div class="clearfloats"></div>
  </div><!-- view_stuff -->
</div><!-- module end -->
